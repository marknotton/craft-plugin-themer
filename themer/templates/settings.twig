{% set css %}
  * {
    -webkit-transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
    -moz-transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
    -o-transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
    -ms-transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
    transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
  }

  input.jscolor { width:100px; height:100px; border:rgba(0,0,0,0.2) 1px solid; display:block; position:relative;  text-align:center; font-weight:bold; font-size:20px; }
  input.jscolor:focus, button.reset:focus { outline: none; }
  input.jscolor + label { color:inherit; position:relative; display:block; padding: 5px 0; width:100%; top:100%; text-align:center; font-weight:bold; font-size:16px; }

  div.colours > div { position:relative; float:left; margin-bottom:20px; margin-right:10px; }
  div.colours:after { content:""; display:table; clear:both; }

  button.reset { clear:both; display:table; margin-top:20px;}

{% endset %}

