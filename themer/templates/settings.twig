<h2>Set your colour preferences</h2>

<div class="colours">

  <div>
    <input class="jscolor" name="header-colour" data-id="header" data-default="#333f4d" value="{{ settings.header }}">
    <label for="header-colour">Header</label>
  </div>

  <div>
    <input class="jscolor" name="background-colour" data-id="background" data-default="ebedef" value="{{ settings.background }}">
    <label for="background-colour">Background</label>
  </div>

  <div>
    <input class="jscolor" name="buttons-colour" data-id="buttons" data-default="DA5A47" value="{{ settings.buttons }}">
    <label for="buttons-colour">Buttons</label>
  </div>

  <div>
    <input class="jscolor" name="headings-colour" data-id="headings" data-default="DA5A47" value="{{ settings.headings }}">
    <label for="headings-colour">Headings</label>
  </div>

  <div>
    <input class="jscolor" name="links-colour" data-id="links" data-default="0d78f2" value="{{ settings.links }}">
    <label for="links-colour">Links</label>
  </div>

  <div>
    <input class="jscolor" name="sidebar-colour" data-id="sidebar" data-default="333f4d" value="{{ settings.sidebar }}">
    <label for="sidebar-colour">Sidebar</label>
  </div>

  <div>
    <input class="jscolor" name="pane-colour" data-id="pane" data-default="F4F5F6" value="{{ settings.pane }}">
    <label for="pane-colour">Pane</label>
  </div>

  <div>
    <input class="jscolor" name="switch-colour" data-id="switch" data-default="00B007" value="{{ settings.switch }}">
    <label for="switch-colour">Switch</label>
  </div>

  <div>
    <input class="jscolor" name="text-colour" data-id="text" data-default="29323d" value="{{ settings.text }}">
    <label for="text-colour">Text</label>
  </div>

  <div>
    <input class="jscolor" name="help-colour" data-id="help" data-default="9d2dcc" value="{{ settings.help }}">
    <label for="help-colour">Help</label>
  </div>

  <div>
    <input class="jscolor" name="small-colour" data-id="small" data-default="000000" value="{{ settings.small }}">
    <label for="small-colour">Small</label>
  </div>

</div>

<button class='reset btn submit'>Reset to default colours</button>

