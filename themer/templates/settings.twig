{% import "_includes/forms" as forms %}

<div class="options">
   {{ forms.hidden({ id:"header",     name:"header",     value:settings.header }) }}
   {{ forms.hidden({ id:"background", name:"background", value:settings.background }) }}
   {{ forms.hidden({ id:"buttons",    name:"buttons",    value:settings.buttons }) }}
   {{ forms.hidden({ id:"eadings",    name:"eadings",    value:settings.headings }) }}
   {{ forms.hidden({ id:"links",      name:"links",      value:settings.links }) }}
